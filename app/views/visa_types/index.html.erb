<h2>Visa Types List</h2>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Country</th>
  </tr>
  </thead>
  <tbody>
  <% @visa_types.each do |visa_type| %>
      <tr>
        <td><%= visa_type.name %></td>
        <td><%= visa_type.country %></td>
        <td><%= link_to "Show", visa_type %>
          <%= link_to "Edit", edit_visa_type_path(visa_type) %>
          <%= link_to "Remove", remove_visa_type_path(visa_type), :confirm => 'Are you really sure?', :method => :put %>
          <%= link_to "Destroy", visa_type, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New", new_visa_type_path%>