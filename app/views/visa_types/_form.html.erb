<%= form_for @visa_type, html: {role: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, class: "form-control", 'placeholder' => "International Visa Type" %>
    </div>

    <div class="form-group">
      <%= f.label :country, class: "sr-only" %>
      <%= f.text_field :country, class: "form-control", 'placeholder' => "Country of Visa Issue" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
<% end %>
