
<h2>Employee List</h2>
<%= form_tag search_employees_path, :method => 'get',class:"navbar-form navbar-left",role:"search" do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], :placeholder => 'Search', :class=>"form-control" %>
    </div>
      <%= submit_tag "Search By Name", :class=>"btn btn-default"%>
<% end %>
<p>
  Download:
  <%= link_to "Download as Excel", employees_path(format: "xls") %>
</p>
<table class="table table-hover"  id = "employees" data-source = <% employees_url(format: 'json') %>>
  <thead>
    <tr>
      <th>Employee Number</th>
      <th>Name</th>
      <th>Category</th>
      <th>Joining Date</th>
      <th>Exit Date</th>
      <th>Position</th>
      <th>Location</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>

  </tbody>
</table>

<%= link_to "New", new_employee_path%>



