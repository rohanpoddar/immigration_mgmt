<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == :success ? "success" : (name == :notice ? "info" : "danger") %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" %>
        </div>
    <% elsif msg.is_a? Array %>
        <div class="alert alert-<%= name == :success ? "success" : (name == :notice ? "info" : "danger") %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <% message=""
             msg.each do |msg_error|
               message=message+msg_error+"<br/>"
             end
          %>
          <%= content_tag :div, message.html_safe, :id => "flash_#{name}" %>
        </div>
    <% end %>
<% end %>
