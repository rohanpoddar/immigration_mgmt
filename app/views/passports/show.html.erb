<div class="well well-lg">
  <h2>Passport Details: <%= @passport.number %></h2>

  <div class="field">
    <strong><%= label_tag :employee_number %>:</strong>
    <%= @passport.employee_number %>
  </div>

  <div class="field">
    <strong><%= label_tag :employee_name %>:</strong>
    <%= link_to @passport.employee.name, employee_path(@passport.employee) %>
  </div>

  <div class="field">
    <strong><%= label_tag :citizenship %>:</strong>
    <%= @passport.citizenship %>
  </div>

  <div class="field">
    <strong><%= label_tag :expiry_date %>:</strong>
    <%= @passport.expiry_date %>
  </div>
  <a href="/visas/new?employee_number=<%= @passport.employee.number %>">Add VISA</a>

<% if @passport.visas %>
  </div>
  <div class="container col-lg-7">
  <h2>Visas</h2>
  <%= @visas=@passport.visas
      render partial: "visas/visa_sublist_with_visa_type", locals: {object: @visas} %>
  </div>
<% else %>
  </div>
<% end %>


