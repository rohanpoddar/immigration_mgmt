<%= form_for @passport, html: {role:"form"} do |f| %>
    <div class="form-control">
      <%= f.text_field :employee_id, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :passport_number, "Passport Number"%>
      <%= f.text_field :passport_number, class: "form-control"%>
    </div>


    <div class="form-group">
      <%= f.label :date_of_expiry%>
      <%= f.text_field :date_of_expiry, :class=>"form-control", 'data-behaviour'=>"datepicker_doe",'placeholder'=>"Select Date of Expiry"%>
      <script type="text/javascript">
          $(document).ready(function(){
              $('[data-behaviour~=datepicker_doe]').datepicker();
          })
      </script>
    </div>

    <div class="form-group">
      <%= f.label :citizenship%>
      <%= f.text_field :citizenship, class: "form-control"%>
    </div>

    <%= f.submit class: 'btn btn-primary'%>
<%end%>