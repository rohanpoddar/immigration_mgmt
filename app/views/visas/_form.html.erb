<%= form_for @visa, html: {role:"form"} do |f| %>

    <div class="form-group">
      <%if(params[:employee_number]==nil)%>
          <%= f.label :employee_number, class: "sr-only"%>
          <%= f.text_field :employee_number, class: "form-control",'placeholder' => "Passport Number here"%>
      <%else%>
          <%= f.label :employee_number%>
          <%= f.text_field :employee_number, class: "form-control", 'value' => "#{params[:employee_number]}", 'disabled'=> "" %>
          <input type="hidden" name="employee_number" value="<%=params[:employee_number]%>"/>
      <%end%>
    </div>

    <div class="form-group">
      <%= f.label :visa_type%>
      <%= collection_select(:visa,:visa_type_name,VisaType.all,:name,:name,{},{:class => "form-control"})%>
    </div>

    <div class="form-group">
      <%= f.label :status, class: "sr-only"%>
      <%= f.text_field :status, class: "form-control",'placeholder' => "Current Visa Status"%>
    </div>

    <div class="form-group">
      <%= f.label :issue_date, class: "sr-only"%>
      <%= f.text_field :issue_date, :class=>"form-control",'placeholder'=>"Select Issue Date"%>
    </div>

    <div class="form-group">
      <%= f.label :expiry_date, class: "sr-only"%>
      <%= f.text_field :expiry_date, :class=>"form-control", 'placeholder'=>"Select Expiry Date"%>
    </div>

    <%= f.submit class:"btn btn-primary" %>
<%end%>

