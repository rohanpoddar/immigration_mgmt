<%= form_for @visa, html: {role:"form"} do |f| %>

    <div class="form-group">
      <%= f.label :passport_number%>
      <%= f.text_field :passport_id, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :visa_type%>
      <%= collection_select(:visa,:visa_type_id,VisaType.all,:id,:name,{},{:class => "form-control"})%>
    </div>

    <div class="form-group">
      <%= f.label :status%>
      <%= f.text_field :status, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :issue_date%>
      <%= f.text_field :issue_date, :class=>"form-control", 'data-behaviour'=>"datepicker_id",'placeholder'=>"Select Issue Date"%>
      <script type="text/javascript">
          $(document).ready(function(){
              $('[data-behaviour~=datepicker_id]').datepicker();
          })
      </script>
    </div>

    <div class="form-group">
      <%= f.label :expiry_date%>
      <%= f.text_field :expiry_date, :class=>"form-control", 'data-behaviour'=>"datepicker_ed",'placeholder'=>"Select Expiry Date"%>
      <script type="text/javascript">
          $(document).ready(function(){
              $('[data-behaviour~=datepicker_ed]').datepicker();
          })
      </script>
    </div>

    <%= f.submit class:"btn btn-primary" %>
<%end%>

